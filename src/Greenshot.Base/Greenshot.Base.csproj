<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
  </PropertyGroup>

  <PropertyGroup Condition="$(TargetFramework) != 'net481'">
    <!-- To fix https://learn.microsoft.com/en-us/visualstudio/msbuild/errors/msb3823 -->
    <GenerateResourceUsePreserializedResources>true</GenerateResourceUsePreserializedResources>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Dapplo.HttpExtensions.JsonNet" Version="2.0.11" />
    <PackageReference Include="Dapplo.Windows.Clipboard" Version="2.0.8" />
    <PackageReference Include="Dapplo.Windows.Dpi" Version="2.0.8" />
    <PackageReference Include="Dapplo.Windows.Gdi32" Version="2.0.8" />
    <PackageReference Include="Dapplo.Windows.Icons" Version="2.0.8" />
    <PackageReference Include="Dapplo.Windows.Kernel32" Version="2.0.8" />
    <PackageReference Include="Dapplo.Windows.Multimedia" Version="2.0.8" />
    <PackageReference Include="SixLabors.ImageSharp" Version="2.1.13" />
    <PackageReference Include="HtmlAgilityPack" Version="1.12.4" />
    <PackageReference Include="log4net" version="3.2.0" />
    <PackageReference Include="Svg" Version="3.4.7" />
  </ItemGroup>
  <ItemGroup Condition="$(TargetFramework) == 'net481'">
    <Reference Include="Accessibility" />
    <Reference Include="CustomMarshalers" />
  </ItemGroup>
  <ItemGroup Condition="$(TargetFramework) != 'net481'">
    <PackageReference Include="System.Resources.Extensions" Version="10.0.2" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="log4net-embedded.xml" />
  </ItemGroup>
</Project>